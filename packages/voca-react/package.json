{
    "name": "@voca/react",
    "version": "0.1.0",
    "description": "React hooks for Voca WebRTC voice chat",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "bun build src/index.ts --outdir dist --format esm --external react --sourcemap=external --minify && tsc --emitDeclarationOnly --outDir dist",
        "dev": "bun build src/index.ts --outdir dist --format esm --external react --watch",
        "lint": "tsc --noEmit"
    },
    "keywords": [
        "voca",
        "webrtc",
        "react",
        "hooks"
    ],
    "author": "Trey Orr",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/treyorr/voca.git",
        "directory": "packages/voca-react"
    },
    "homepage": "https://voca.vc",
    "bugs": "https://github.com/treyorr/voca/issues",
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "react": ">=18.0.0"
    },
    "dependencies": {
        "@voca/client": "*"
    },
    "devDependencies": {
        "@types/react": "^19.2.7",
        "react": "^19.2.3",
        "typescript": "^5.9.3"
    }
}